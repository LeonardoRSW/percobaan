<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_page"
        />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/logo_upb" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:padding="5dp"
        android:shadowColor="#ffffff10"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_black"
        android:background="@color/tranparan"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/visi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visi &amp; Misi"
        android:padding="5dp"
        android:textColor="#dab869"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="150dp"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_black"
        android:background="@color/tranparan"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/program_studi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Studi"
        android:textColor="#dab869"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="300dp"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_black"
        android:background="@color/tranparan"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/tentang_kami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Kami"
        android:textColor="#dab869"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="500dp"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_black"
        android:background="@color/tranparan"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNIVERSITAS PELITA BANGSA"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/inter_bold"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enterpreneur University"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/inter_medium"/>

    <TextView
        android:id="@+id/paragraf"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/inter_light"/>

    <TextView
        android:id="@+id/paragraf2"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/inter_light"/>


</RelativeLayout>